<div id="page-content">
  <h1 class="text-center mt-4">Log in</h1>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(scope: :session, local: true, url: login_path, class: "shadow p-3 mb-5 mt-2 bg-light rounded") do |form| %>
          <div class="form-group row">
            <%= form.label :email, "Email", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= form.email_field :email, placeholder: "Enter your email address", class: "form-control shadow rounded" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :password, "Password", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= form.password_field :password, placeholder: "Enter your password", class: "form-control shadow rounded" %>
            </div>
          </div>
      </div>
        <div class="form-group row" align="center">
          <div class="col-12">
            <%= form.submit("Log in", class: "btn btn-outline-primary ") %>
            <%= link_to "Cancel and go back", root_path, class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

<div class="container mt-5" align="center">
  <h1><%= @user.username %>'s profile</h1>

  <%= gravatar_for @user, size: 200 %>

  <p class="mt-3">
    <%= link_to "Edit profile", edit_user_path(@user) %>
  </p>

  <small>
    You&apos;ve joined <%= time_ago_in_words(@user.created_at) %> ago
  </small>
  <h3 class="mt-2"><%= @user.username %>'s account</h3>

  <p>You have <%= @user.account.balance %> points</p>

  <%= link_to "Logout", root_path %>
</div>
